<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@color/DarkOrchid"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textcalc"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"

        android:layout_marginTop="1dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="497dp"
        android:text="Calculator"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/DarkSalmon"
        android:textSize="110px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="433dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_x="0dp"
        android:layout_y="128dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/numclr"
            android:layout_width="184dp"
            android:layout_height="87dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_weight="1"
            android:text="Clear"
            android:textColor="@color/LightGoldenrodYellow"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/numdel"
            android:layout_width="92dp"
            android:layout_height="87dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_weight="1"
            android:text="Del"
            android:textColor="@color/Red"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num2"
            android:layout_width="92dp"
            android:layout_height="87dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_weight="1"
            android:text="2"
            android:textColor="@color/Maroon"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num0"
            android:layout_width="92dp"
            android:layout_height="87dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@color/Maroon"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/numeq"
            android:layout_width="184dp"
            android:layout_height="87dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_weight="1"
            android:text="="
            android:textColor="@color/LawnGreen"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/numdiv"
            android:layout_width="92dp"
            android:layout_height="87dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_weight="1"
            android:text="/"
            android:textColor="@color/Maroon"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num3"
            android:layout_width="92dp"
            android:layout_height="87dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_weight="1"
            android:text="3"
            android:textColor="@color/Maroon"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/nummul"
            android:layout_width="92dp"
            android:layout_height="87dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_weight="1"
            android:text="*"
            android:textColor="@color/Maroon"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num8"
            android:layout_width="92dp"
            android:layout_height="87dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_weight="1"
            android:text="8"
            android:textColor="@color/Maroon"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num7"
            android:layout_width="92dp"
            android:layout_height="87dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_weight="1"
            android:text="7"
            android:textColor="@color/Maroon"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/numsub"
            android:layout_width="92dp"
            android:layout_height="87dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_weight="1"
            android:text="-"
            android:textColor="@color/Maroon"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num4"
            android:layout_width="92dp"
            android:layout_height="87dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_weight="1"
            android:text="4"
            android:textColor="@color/Maroon"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num1"
            android:layout_width="92dp"
            android:layout_height="87dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_weight="1"
            android:text="1"
            android:textColor="@color/Maroon"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/numdec"
            android:layout_width="92dp"
            android:layout_height="87dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_weight="1"
            android:text="."
            android:textColor="@color/Maroon"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num6"
            android:layout_width="92dp"
            android:layout_height="87dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_weight="1"
            android:text="6"
            android:textColor="@color/Maroon"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num5"
            android:layout_width="92dp"
            android:layout_height="87dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_weight="1"
            android:text="5"
            android:textColor="@color/Maroon"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/num9"
            android:layout_width="92dp"
            android:layout_height="87dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_weight="1"
            android:text="9"
            android:textColor="@color/Maroon"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/numadd"
            android:layout_width="92dp"
            android:layout_height="87dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_weight="1"
            android:text="+"
            android:textColor="@color/Maroon"
            android:textSize="20dp"
            android:textStyle="bold" />
    </GridLayout>

    <EditText
        android:id="@+id/numin"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="437dp"
        android:layout_x="0dp"
        android:layout_y="64dp"
        android:ems="10"
        android:hint="Enter your numbers"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/LightGoldenrodYellow"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.126" />
</AbsoluteLayout>